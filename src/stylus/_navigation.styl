.navigation
    position relative
    background-color darken($default_site_colour,15)
    text-shadow 0 1px 0 rgba(0,0,0,0.5)
    width 100%
    height 48px
    line-height 48px
    font-size 16px
    padding 0 8px
    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
ul.navi 
    list-style-type none
    margin 0
    margin-bottom 33px
    padding 0
    width 100%
    background darken($default_site_colour, 15)

    & li 
        position relative
        display inline-block
        background darken($default_site_colour, 15)
        text-align center
    & > li  
        margin-right -5px 
    & > li:first-child  
        border-left 0 
    & > li:last-child  
        margin-right 0 
    & li a 
        display block
        color #fff
        padding 12px 24px 12px 24px
        font-family 'Open Sans', sans-serif
        font-size 16px
        font-weight 600
        text-shadow 0 1px 0 rgba(255,255,255,0.2)
        transition background-color 0.5s ease-out
        -o-transition background-color 0.5s ease-out
        -moz-transition background-color 0.5s ease-out
        -webkit-transition background-color 0.5s ease-out

    & li a:hover 
        background-color lighten($default_site_colour, 5)
        text-decoration none
    
    & li .child-navi 
        background none repeat scroll 0 0 rgba(0, 0, 0, 0.075)
        position absolute
        right 0
        top 0
        width 48px
        height 100%
        text-align center
        z-index 999
        cursor pointer
    
    & li .child-navi:before 
        content ''
        display inline-block
        height 100%
        vertical-align middle
        margin-right -0.25em
    
    & li .child-navi > i 
        color #333
        font-size 18px
        display inline-block
        vertical-align middle
    
    & li ul 
        margin 0
        list-style-type none
    
    & li ul li  
        background-color #BBB 
    & li > ul 
        display none
        position absolute
        left 0
        top 100%
        z-index 999
        width 100%
    
    & li > ul > li ul 
        display none
        position absolute
        left 100%
        top 0
        z-index 999
        width 100%
    

    &.shrink li 
        display block
        width 100%
        background $default_site_colour

        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
    
    &.shrink li a 
        display block
        border-bottom 1px solid rgba(0, 0, 0, 0.075)
        border-top 1px solid rgba(0, 0 , 0, .075)
        color #fff
        text-align center
        
        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
    
    &.shrink li .child-navi 
        height 40px
    
    &.shrink li > ul 
        display none
        position static

.btn-shrink
    position absolute
    right 8px
    top 50%
    width 40px
    height 30px
    background-color darken($default_site_colour, 10)
    border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
    border-radius 4px 4px 4px 4px
    border-style solid
    border-width 1px
    color #FFFFFF
    box-shadow 0 1px 0 rgba(255, 255, 255, 0.1) inset, 0 1px 0 rgba(255, 255, 255, 0.075)
    padding 7px 10px
    text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
    cursor pointer
    text-align center

    transform translate(0, -50%)
    -o-transform translate(0, -50%)
    -ms-transform translate(0, -50%)
    -moz-transform translate(0, -50%)
    -webkit-transform translate(0, -50%)

    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    
    & .fa
        position absolute
        left 1.2rem
        
    &:hover, &:focus 
        background-color darken($default_site_colour, 17)
        color #FFF



    