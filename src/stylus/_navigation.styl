.navigation
    position relative
    background-color darken($default_site_colour,15)
    text-shadow 0 .1rem 0 rgba(0,0,0,.5)
    width 100%
    height 4.8rem
    line-height 4.8rem
    font-size 1.6rem
    padding 0 .8rem
    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
ul.navi
    list-style-type none
    margin 0
    padding 0
    width 100%
    background darken($default_site_colour, 15)
    -webkit-transition all .2s
    -moz-transition all .2s
    -ms-transition all .2s
    -o-transition all .2s
    & li 
        position relative
        display inline-block
        background darken($default_site_colour, 15)
        text-align center
    & > li  
        margin-right -.5rem 
    & > li:first-child  
        border-left 0 
    & > li:last-child  
        margin-right 0 
    & li a 
        display block
        color #fff
        padding 1.2rem 2.4rem 1.2rem 2.4rem
        font-family 'FiraSans'
        font-size 1.6rem
        font-weight 600
        text-decoration none
        text-shadow 0 .1rem 0 rgba(255,255,255,.2)
        transition background-color .5s ease-out
        -o-transition background-color .5s ease-out
        -moz-transition background-color .5s ease-out
        -webkit-transition background-color .5s ease-out

    & li a:hover 
        background-color lighten($default_site_colour, 5)
        text-decoration none
    
    & li .child-navi 
        background none repeat scroll 0 0 rgba(0, 0, 0, .075)
        position absolute
        right 0
        top 0
        width 4.8rem
        height 100%
        text-align center
        z-index 999
        cursor pointer
    
    & li .child-navi:before 
        content ''
        display inline-block
        height 100%
        vertical-align middle
        margin-right -.25em
    
    & li .child-navi > i 
        color #333
        font-size 1.8rem
        display inline-block
        vertical-align middle
    
    & li ul 
        margin 0
        list-style-type none
    
    & li ul li  
        background-color #BBB
    
    & li > ul > li ul 
        position absolute
        left 100%
        top 0
        z-index 999
        width 100%
    & li.push
        margin 0
    

    &.shrink li 
        display block
        width 100%
        background $default_site_colour

        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
    
    &.shrink li a 
        display block
        border-bottom .1rem solid rgba(0, 0, 0, .075)
        border-top .1rem solid rgba(0, 0 , 0, .075)
        color #fff
        text-align center
        
        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
    
    &.shrink li .child-navi 
        height 4rem
    
    &.shrink li > ul 
        display none
        position static
    
    &.shrink .push
        float none

.btn-shrink
    position absolute
    right .8rem
    top 50%
    width 4rem
    height 3rem
    background-color darken($default_site_colour, 10)
    border-color rgba(0, 0, 0, .1) rgba(0, 0, 0, .1) rgba(0, 0, 0, .25)
    border-radius .4rem .4rem .4rem .4rem
    border-style solid
    border-width .1rem
    color #FFFFFF
    box-shadow 0 .1rem 0 rgba(255, 255, 255, .1) inset, 0 1px 0 rgba(255, 255, 255, .075)
    padding .7rem 1rem
    text-shadow 0 -.1rem 0 rgba(0, 0, 0, .25)
    cursor pointer
    text-align center

    transform translate(0, -50%)
    -o-transform translate(0, -50%)
    -ms-transform translate(0, -50%)
    -moz-transform translate(0, -50%)
    -webkit-transform translate(0, -50%)

    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    
    & .fa
        position absolute
        left 1.2rem
        
    &:hover, &:focus 
        background-color darken($default_site_colour, 17)
        color #FFF
.caret
    padding-left .3rem
.navi > li 
    ul
        opacity 0
        position absolute
        display inline-block
        z-index 999
        left 0
        width 20rem
        transtion opacity .2s
        -webkit-transition opacity .2s
        -moz-transition opacity .2s
        -ms-transition opacity .2s
        -o-transition opacity .2s
.navi > li:hover
    ul
        opacity 1







    