/* UTILITIES */
.full-width-element /* Makes element the width of it's parent*/
  width 100%
  box-sizing border-box 
.no-bleed-element /* Stops image from bleeding over edge of parent */
  max-width 100%
  box-sizing border-box
.push
  float right 
.pull 
  float left
.round /* Makes any element have round corners */
  border-radius 4px

/* MISC */
hr
  margin-top 3rem
  margin-bottom 3.5rem
  border-width 0
  border-top 1px solid #E1E1E1
dl,figure
  margin-bottom 2.5rem

/* CLEARING */
.container:after,.row:after,label:after,.clear-it
  content ""
  display table
  clear both