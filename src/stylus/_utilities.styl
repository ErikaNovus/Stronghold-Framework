/* UTILITIES */
.full-width /* Makes element the width of it's parent*/
  width 100%
  box-sizing border-box 
.no-bleed /* Stops image from bleeding over edge of parent */
  max-width 100%
  box-sizing border-box
.push
  float right 
.pull 
  float left
.round /* Makes any element have round corners */
  border-radius 4px
.circle /* Use with images to make them into perfect circles */
  border-radius 50%
.shadow-left
  box-shadow -3px 4px 10px 2px rgba(0,0,0,0.3)
.shadow-right 
  box-shadow 3px 4px 10px 2px rgba(0,0,0,0.3)

/* MISC */
hr
  margin-top 3rem
  margin-bottom 3.5rem
  border-width 0
  border-top 1px solid #E1E1E1
dl,figure
  margin-bottom 2.5rem

/* CLEARING */
.container:after,.row:after,label:after,.clear-it
  content ""
  display table
  clear both