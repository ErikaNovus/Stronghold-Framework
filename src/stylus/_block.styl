.block
  margin-bottom 35px
  margin-left 5px
  margin-right 5px
  img
    margin 0
    padding 0
  h1
    padding 0
    margin 0
  h2
    padding 0
    margin 0
  h3
    padding 0
    margin 0  
  .block-head
    background-color lighten($default_site_colour, 5)
    padding 5px
    h3
      margin-top 0.5px
      margin-bottom 0.3px
      margin-left 0.5rem
      font-weight bold
    h4
      margin-top 5px
      margin-bottom 3px
      margin-left 3px
      font-weight bold
  .block-body
    padding-bottom 2px
    background-color lighten($default_site_colour, 30)
    .block-list
      list-style none
      padding-left 7.5px
      padding-top 10px
      margin-bottom 0
      margin-left 15px
      margin-top 0
      font-size 1.4rem
      .fa
        background-color lighten($default_site_colour, 5)
        padding 0.35rem 0.35rem 0.6rem 0.35rem
      .round
        .fa
          border-top-left-radius 4px
          border-bottom-left-radius 4px
      li 
        width 95%
        margin-bottom 1rem
        background-color lighten($default_site_colour, 20)
      .li-title
        width 30%
        margin 0
        margin-left 0.3rem
        padding 2px
        font-weight 600
      .li-body
        width 40%
        margin 0
        margin-left 0.2rem
      
    
    